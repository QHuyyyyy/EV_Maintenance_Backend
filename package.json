  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "node dist/src/app.js",
    "build": "npm run build:prod",
    "build:dev": "npm run swagger && tsc && npm run copy-swagger:win",
    "build:prod": "npm run swagger && tsc && npm run copy-swagger:linux",
    "copy-swagger:win": "copy src\\swagger-output.json dist\\src\\swagger-output.json",
    "copy-swagger:linux": "cp src/swagger-output.json dist/src/swagger-output.json || true",
    "dev": "nodemon --exec ts-node src/app.ts",
    "swagger": "ts-node swagger.ts",
    "swagger:dev": "npm run swagger && npm run dev",
    "test": "echo \"No tests specified\" && exit 0",
    "heroku-postbuild": "npm run build"
  },
